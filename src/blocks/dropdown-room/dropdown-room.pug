mixin dropdownRoom (name)
    include ../dropdown/dropdown__counter
    h3.heading.heading_type_h3=name
    .blockDropdownMain
        .blockDropdownList.removeUnderline(id = 'container')
            p.heading.heading_type_h3Light(id = 'guests') Сколько гостей
            i.fa.fa-angle-down.heading.heading_type_h3(aria-hidden="true", id="arrowDown")
        .blockDropdownAdditional.dropdownHide(id='dropdownHide')
            .blockDropdownList 
                p.heading.heading_type_h3.heading_color_75 Взрослые
                +Counter()
            .blockDropdownList
                p.heading.heading_type_h3.heading_color_75 Дети
                +Counter()
            .blockDropdownList
                p.heading.heading_type_h3.heading_color_75 Младенцы
                +Counter()
            .blockDropdownList
                p.heading.heading_type_h3.heading_color_purple.clearHide(id = 'clear') ОЧИСТИТЬ
                p.heading.heading_type_h3.heading_color_purple(id = 'apply') ПРИМЕНИТЬ 