mixin information(heading, text, path)
    .blockContainer
        svg(width='40' height='40' viewbox='0 0 40 40' fill='none' xmlns='http://www.w3.org/2000/svg')
            path(d=path fill='url(#paint0_linear)')
            defs
                lineargradient#paint0_linear(x1='20' y1='-4' x2='20' y2='44' gradientunits='userSpaceOnUse')
                    stop(stop-color='#BC9CFF')
                    stop(offset='1' stop-color='#8BA4F9')
        .blockForText
            h3.heading.heading_type_h3.heading_color_75.miniMargin=heading
            p.heading.heading_type_h3Light(id='p')=text
